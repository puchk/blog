<% include ./partials/header %>

<h1>index page</h1>

<% blogs.forEach(function(blog){ %>
	<div>
		<h1><%=blog.title%></h1>
		<img src="<%=blog.image%>">
		<p><%=blog.created%></p>
		<p><%=blog.body.substring(0, 200)%>...</p>
		<a href="/blogs/<%= blog._id %>">View More</a>
	</div>
<% }) %>

<% include ./partials/footer %>
